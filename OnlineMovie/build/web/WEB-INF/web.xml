<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>SearchMovie</servlet-name>
        <servlet-class>SearchMovie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TicketStatus</servlet-name>
        <servlet-class>TicketStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookTicket</servlet-name>
        <servlet-class>BookTicket</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingConfirm</servlet-name>
        <servlet-class>BookingConfirm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CancelTicket</servlet-name>
        <servlet-class>CancelTicket</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchMovie</servlet-name>
        <url-pattern>/SearchMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TicketStatus</servlet-name>
        <url-pattern>/TicketStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookTicket</servlet-name>
        <url-pattern>/BookTicket</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingConfirm</servlet-name>
        <url-pattern>/BookingConfirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CancelTicket</servlet-name>
        <url-pattern>/CancelTicket</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
